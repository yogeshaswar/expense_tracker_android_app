<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="4dp"
    android:background="@color/app_background">

    <Spinner
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_category"
        android:layout_gravity="end"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        app:cardCornerRadius="6dp"
        app:cardBackgroundColor="@color/white"
        android:padding="10dp">
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    app:cardBackgroundColor="#1FAA59"
                    app:cardCornerRadius="4dp">
                    <ImageView
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:id="@+id/add_new_expense"
                        android:src="@drawable/ic_add_icon"
                        android:contentDescription="add new"/>


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Expense"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    app:cardBackgroundColor="#1FAA59"
                    app:cardCornerRadius="4dp">
                    <ImageView
                        android:id="@+id/add_new_category"
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:src="@drawable/ic_category_icon"
                        android:contentDescription="New Category"/>


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Category"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    app:cardBackgroundColor="#1FAA59"
                    app:cardCornerRadius="4dp">
                    <ImageView
                        android:id="@+id/show_all_expenses"
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:src="@drawable/ic_show_list"
                        android:contentDescription="add new"/>


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Expense"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    app:cardBackgroundColor="#1FAA59"
                    app:cardCornerRadius="4dp">
                    <ImageView
                        android:id="@+id/manage_money"
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:src="@drawable/ic_manage_money_icon"
                        android:contentDescription="add new"/>


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage Money"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:cardBackgroundColor="#1FAA59"
                    app:cardCornerRadius="4dp">

                    <ImageView
                        android:id="@+id/add_note"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:contentDescription="New Category"
                        android:src="@drawable/ic_add_note_icon" />


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Note"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_columnWeight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10dp">
                <androidx.cardview.widget.CardView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:padding="10dp"
                    app:cardBackgroundColor="#1FAA59"
                    app:cardCornerRadius="4dp">
                    <ImageView
                        android:layout_height="60dp"
                        android:layout_width="60dp"
                        android:src="@drawable/ic_show_list"
                        android:contentDescription="add new"/>


                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Expense"/>

            </LinearLayout>
        </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>